@model W9_ProgettoSettimanale.Models.Users

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="card-title">Login</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Username:</label>
                            <input asp-for="Name" class="form-control" placeholder="Inserisci il tuo username" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Password:</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Inserisci la tua password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <input type="submit" value="Accedi" class="btn btn-info text-white" />
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <a asp-controller="Account" asp-action="Register" class="text-decoration-none text-info">Non hai ancora un account? Clicca qui!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
