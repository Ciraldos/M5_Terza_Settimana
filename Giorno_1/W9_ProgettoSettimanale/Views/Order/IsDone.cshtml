@model IEnumerable<W9_ProgettoSettimanale.Models.Orders>

@{
    ViewData["Title"] = "IsDone";
}

<h1>Evasione Ordini</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Id. Ordine
            </th>
            <th>
                Data Ordine
            </th>
            <th>
                Confermato
            </th>
            <th>
                Evaso
            </th>
            <th>
                Prezzo Totale Ordine
            </th>
            <th>
                Indirizzo Spedizione
            </th>
            <th>
                Note Aggiuntive
            </th>
            <th>
                Azioni
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                #@item.Id
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlacedAt)
            </td>
                @if (@item.IsConfirmed)
                {
                    <td>
                        <span class="badge bg-success p-2">Si</span>
                    </td>
                }
                else
                {
                    <td>
                        <span class="badge bg-danger p-2">No</span>
                    </td>
                }
                @if (@item.Done)
                {
                    <td>
                        <span class="badge bg-success p-2">Si</span>
                    </td>
                }
                else
                {
                    <td>
                        <span class="badge bg-danger p-2">No</span>
                    </td>
                }
            <td>
                    €@Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <form asp-action="IsDone" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@item.Id" />
                <button type="submit" class="btn btn-primary">Evadi Ordine</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
