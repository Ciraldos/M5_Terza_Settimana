@model W9_ProgettoSettimanale.Models.OrderViewModel

<h2>Riepilogo Ordine</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome Prodotto</th>
            <th>Prezzo</th>
            <th>Quantità</th>
            <th>Totale</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderedProducts)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
                <td>@item.Quantity</td>
                <td>@(item.ProductPrice * item.Quantity)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Costo Totale</td>
            <td>@Model.TotalAmount</td>
            <td><input type="hidden" name="TotalAmount" value="@Model.TotalAmount" /></td>

        </tr>
    </tfoot>
</table>

<form asp-action="CompleteOrder" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="ShippingAddress">Indirizzo di Spedizione</label>
        <input type="text" class="form-control" id="ShippingAddress" name="ShippingAddress" value="@Model.ShippingAddress" required />
    </div>
    <div class="form-group">
        <label for="Notes">Note</label>
        <textarea class="form-control" id="Notes" name="Notes">@Model.Notes</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Concludi Ordine</button>
</form>
