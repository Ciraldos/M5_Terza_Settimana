@model W9_ProgettoSettimanale.Models.OrderViewModel
<div class="container mt-5">
    <h2 class="mb-4">Riepilogo Ordine</h2>

    <table class="table table-striped">
        <thead class="bg-info text-white">
            <tr>
                <th>Nome Prodotto</th>
                <th>Prezzo</th>
                <th>Quantità</th>
                <th>Totale</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderedProducts)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>€@item.ProductPrice</td>
                    <td>@item.Quantity</td>
                    <td>€@(item.ProductPrice * item.Quantity)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="font-weight-bold">Costo Totale</td>
                <td class="font-weight-bold">€@Model.TotalAmount</td>
            </tr>
        </tfoot>
    </table>

    <form asp-action="CompleteOrder" method="post" class="mt-4">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="ShippingAddress">Indirizzo di Spedizione</label>
            <input type="text" class="form-control" id="ShippingAddress" name="ShippingAddress" value="@Model.ShippingAddress" required />
        </div>
        <div class="form-group">
            <label for="Notes">Note</label>
            <textarea class="form-control" id="Notes" name="Notes">@Model.Notes</textarea>
        </div>
        <button type="submit" class="btn btn-info text-white mt-2">Concludi Ordine</button>
    </form>
</div>
