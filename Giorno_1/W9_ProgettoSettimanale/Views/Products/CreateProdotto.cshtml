@model W9_ProgettoSettimanale.Models.ProductsViewModel

@{
    ViewData["Title"] = "CreateProdotto";
    var allIngredients = ViewBag.AllIngredients as List<Ingredients>;
}

<h1>Crea Prodotto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProdotto" asp-controller="Products" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Products.Name" class="control-label">Inserisci Nome Prodotto:</label>
                <input asp-for="Products.Name" class="form-control" />
                <span asp-validation-for="Products.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.Price" class="control-label">Inserisci Prezzo:</label>
                <input asp-for="Products.Price" class="form-control" />
                <span asp-validation-for="Products.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.Photo" class="control-label">Inserisci Link Foto:</label>
                <input asp-for="Products.Photo" class="form-control" />
                <span asp-validation-for="Products.Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Products.DeliveryTimeInMinutes" class="control-label">Inserisci Tempo Spedizione:</label>
                <input asp-for="Products.DeliveryTimeInMinutes" class="form-control" />
                <span asp-validation-for="Products.DeliveryTimeInMinutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ingredients</label>
                <div>
                    @foreach (var ingredient in allIngredients)
                    {
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="SelectedIngredients" value="@ingredient.Id" />
                                @ingredient.Name
                            </label>
                        </div>
                    }
                </div>
                <span asp-validation-for="SelectedIngredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
